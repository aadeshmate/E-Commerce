<%-include("./partials/header")%>
<%-include("./partials/navbar")%>

<main>
    <h1 class="display-3">Shopping Cart</h1>
    <div class="container">
       <%- include("./partials/flash") %>
        <div class="row">
            <%for(let product of products){%>
                <div class="col-lg-4 col-md-6">
                    <div class="card" style="width: 20rem;">
                        <img src="<%=product.img%>" class="card-img-top" alt="product" height="191">
                        <div class="card-body">
                          <h5 class="card-title"><%=product.name%></h5>
                          <p class="card-text"><%=product.desc%>...</p>
                          <h5 class="card-title"><i class="fas fa-rupee-sign"></i><%=product.price%></h5>
                          <a href="/products/<%=product._id%>" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
            <%}%>
        </div>
    </div>
</main>

<%-include("./partials/footer")%>